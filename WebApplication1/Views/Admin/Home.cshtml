@{
  ViewData["Title"] = "Home";
  Layout = "_Layout"; // view will render inside the shared layout
}

@section Head {
  <!-- Page-specific head scripts (Tailwind & GSAP) -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="@Url.Content("~/css/home.css")" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
}

<!-- Wrap the page content in a container div so we keep the original body classes
  while allowing the layout to own the real <body> element. -->
<div class="home-root flex items-center justify-center min-h-screen bg-gray-100">

  <!-- ======= Card Container ======= -->
  <div class="card-container bg-white shadow-lg">

    <!-- === Admin Panel Card === -->
    <div class="card bg-blue-500 rounded-2xl h-[300px] w-full top-0 left-0"
      style="background-image: url('@Url.Content("~/img/adminlogo.jpg")'); background-repeat: no-repeat; background-size: cover; background-position: center; z-index: 10;">
      <div class="card-content">
        <div class="card-title">Admin Panel</div>
        <div class="card-description">
          Manage and oversee your platform with ease. The admin panel provides
          a seamless interface for handling users, products, and content. From
          updating inventory to monitoring user activity — it’s all at your
          fingertips.
        </div>
      </div>
    </div>

    <!-- === Product Control Card === -->
    <div class="card bg-teal-600 rounded-2xl border-white h-[400px] w-[300px]  left-0.5 bottom-0"
      style="background-image: url('@Url.Content("~/img/modern.jpg")'); background-repeat: no-repeat; background-size: cover; background-position: center; z-index: 12;">
      <div class="card-content">
        <div class="card-title">Product Control</div>
        <div class="card-description">
          Effortlessly manage your inventory with the Product Control panel.
          Add, edit, or remove products with just a few clicks. Track stock
          levels, update pricing, and organize categories to ensure a smooth
          shopping experience.
        </div>
      </div>
    </div>

    <!-- === Billing Check Card === -->
    <div
      class="card-d3 bg-teal-600 rounded-2xl border-4 hover:border-0 border-white h-[334px] w-[334px] right-0 bottom-0"
      style="background-image: url('@Url.Content("~/img/product.jpg")'); background-repeat: no-repeat; background-size: cover; background-position: center; z-index: 11;">
      <div class="card-content">
        <div class="card-title">Billing Check</div>
        <div class="card-description">
          Easily monitor and manage transactions with the Billing Check panel.
          Track payments, review invoices, and ensure seamless order
          processing. Stay updated on financial records with a clean and
          efficient interface.
        </div>
      </div>
    </div>

  </div>

  <!-- ======= Dual Content Section ======= -->
  <div class="dual__content flex flex-col items-center gap-4 relative">
    <img src="@Url.Content("~/img/layer1.svg")" alt="Animated Layer" class="flex gap-4 relative" />

    <div class="button-container">
      <a href="/admin/signup" class="signup-button">Sign Up</a>
      <a href="/admin/login" class="login-button">Login</a>
    </div>

    <!-- === Google Login Button === -->

  </div>

</div>

@section Scripts {
  <!-- Note: home.js is already included in _Layout; avoid duplicating it here. -->
}