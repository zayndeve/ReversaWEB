@using WebApplication1.Models
@model Member?

<div class="dashboard-navbar">
  <div class="dashboard-page__header">
    <!-- ===== Left Side: Welcome Message ===== -->
    <div class="header-left">
      <h2 class="dashboard-page__header-title">
        Welcome back,
        <span class="highlighted">
          @{
            // Prefer strongly-typed model; fall back to session values if view didn't pass a model
            var sessionNick = Context.Session.GetString("MemberNick");
            var nickToShow = Model?.MemberNick ?? sessionNick ?? "Nick is not defined";
          }
          @nickToShow
        </span>
      </h2>
      <p class="dashboard-page__header-subtext">
        This is your command center to manage everything in RE:VERSO
      </p>
    </div>

    <!-- ===== Right Side: Profile + Support ===== -->
    <div class="header-right">
      <div class="admin-profile">
        @{
          // Resolve image and nick from model first, then session, then defaults
          var sessionNick2 = Context.Session.GetString("MemberNick");
          var sessionImage = Context.Session.GetString("MemberImage");

          var finalNick = Model?.MemberNick ?? sessionNick2 ?? "Admin";

          string finalImagePath;
          var imgName = Model?.MemberImage ?? sessionImage;
          if (!string.IsNullOrEmpty(imgName))
          {
            finalImagePath = Url.Content("~/uploads/members/" + imgName);
          }
          else
          {
            finalImagePath = Url.Content("~/img/profile.png");
          }
        }
        <img src="@finalImagePath" alt="Avatar" class="avatar-img" />
        <div>@finalNick</div>
      </div>

      <form action="/admin/support" method="GET">
        <button class="support-button" type="submit">
          <i class="fa-solid fa-headset"></i> Support
        </button>
      </form>
    </div>
  </div>
</div>