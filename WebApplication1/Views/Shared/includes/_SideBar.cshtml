@{
  var currentPath = ViewContext.HttpContext.Request.Path.ToString().ToLower();
}

<div class="dashboard-sidebar">
  <!-- ===== Sidebar Header ===== -->
  <div class="sidebar-header">
    <img src="@Url.Content("~/img/logo.png")" alt="Logo" />
    <h3>ReVer:So MAKES YOU YOU</h3>
  </div>

  <!-- ===== Sidebar Navigation ===== -->
  <nav class="sidebar-nav">
    <a href="/admin/dashboard" class="nav-item @(currentPath == "/admin/dashboard" ? "active" : "")">
      <i class="fas fa-house"></i> Dashboard
    </a>

    <a href="/admin/product/all" class="nav-item @(currentPath == "/admin/product/all" ? "active" : "")">
      <i class="fas fa-box-open"></i> Products
    </a>

    <a href="/admin/users" class="nav-item @(currentPath == "/admin/users" ? "active" : "")">
      <i class="fas fa-user-group"></i> Users
    </a>

    <a href="/admin/analytics-dashboard"
      class="nav-item @(currentPath == "/admin/analytics-dashboard" ? "active" : "")">
      <i class="fas fa-receipt"></i> Sales Overview
    </a>

    <a href="/admin/update" class="nav-item @(currentPath == "/admin/update" ? "active" : "")">
      <i class="fas fa-gear"></i> Settings & Profile
    </a>
  </nav>

  <!-- ===== Logout Section ===== -->
  <div class="sidebar-logout">
    <a href="/admin/logout" class="nav-item" onclick="return confirm('Do you want to logout?')">
      <i class="fas fa-sign-out-alt"></i> Log out
    </a>
  </div>
</div>